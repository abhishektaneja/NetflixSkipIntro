{
  "manifest_version": 3,
  "name": "Netflix auto skip",
  "version": "1.0",
  "description": "Automatically clicks the Skip Intro, Skip Recap buttons on Netflix.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
